{
    "wandb_project": "neural_vocoder",

    "num_gpus": 0,
    "batch_size": 3,
    "n_epochs": 200,
    "lr": 0.0005,
    "adam_b1": 0.8,
    "adam_b2": 0.99,
    "lr_decay": 0.999,
    "seed": 99,

    "mel_loss_coef": 45.0,
    "feat_loss_coef": 2.0,

    "upsample_strides": [8,8,2,2],
    "upsample_kernel_sizes": [16,16,4,4],
    "upsample_channel": 256,
    "resblock_kernel_sizes": [3,7,11],
    "resblock_dilation_sizes": [[1,3,5], [1,3,5], [1,3,5]],

    "activation": {
        "name": "lrelu",
        "slope": 0.1
    },

    "use_spectral_norm": true,

    "segment_size": 8192,
    "n_mels": 80,
    "n_freq": 1025,
    "n_fft": 1024,
    "hop_size": 256,
    "win_size": 1024,

    "sampling_rate": 22050,

    "fmin": 0,
    "fmax": 8000,
    "fmax_for_loss": null,

    "num_workers": 4,

    "dist_config": {
        "dist_backend": "nccl",
        "dist_url": "tcp://localhost:54321",
        "world_size": 1
    }
}
